{
  "kind": "collectionType",
  "collectionName": "payments",
  "info": {
    "singularName": "payment",
    "pluralName": "payments",
    "displayName": "Payment"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "reservation": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::reservation.reservation"
    },
    "amount": {
      "type": "decimal"
    },
    "paymentDate": {
      "type": "datetime"
    },
    "paymentStatus": {
      "type": "enumeration",
      "enum": [
        "pending",
        "completed"
      ]
    },
    "paymentMethod": {
      "type": "enumeration",
      "enum": [
        "credit_card",
        "qrcode"
      ]
    }
  }
}
